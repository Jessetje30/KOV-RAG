# OpenAI API Configuration (GPT-5)
OPENAI_API_KEY=your_openai_api_key_here
USE_OPENAI=true
OPENAI_LLM_MODEL=gpt-5
OPENAI_EMBED_MODEL=text-embedding-3-large

# Ollama Configuration (Optional fallback)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=qwen2.5:14b
OLLAMA_EMBED_MODEL=nomic-embed-text

# JWT Secret Key (REQUIRED - generate a strong random key)
# Generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Cookie Encryption Key for Frontend (REQUIRED - generate a strong random key)
# Generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
COOKIE_ENCRYPTION_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Database Configuration
DATABASE_URL=sqlite:///./rag_app.db

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Backend API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Configuration
BACKEND_URL=http://localhost:8000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Document Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_FILE_SIZE_MB=10

# Note: Model configuration is now part of OpenAI/Ollama settings above
