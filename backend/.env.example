# ============================================
# BACKEND CONFIGURATION
# ============================================

# JWT Authentication
# Generate a secure key: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration - BBL Specific
DATABASE_URL=sqlite:///./bbl_rag_app.db

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Backend API Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Security Configuration
# Set to 'true' in production to enforce HTTPS
ENFORCE_HTTPS=false

# CORS Configuration (comma-separated list of allowed origins)
# For development: include localhost ports for frontend
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Document Processing
CHUNK_SIZE=1200
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=10

# ============================================
# LLM PROVIDER CONFIGURATION
# ============================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_LLM_MODEL=gpt-5
OPENAI_EMBED_MODEL=text-embedding-3-large
